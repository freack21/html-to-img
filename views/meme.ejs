<%- include("./layout/header") %>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Impact:wght@400&family=Anton&display=swap");

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    background-color: #1a1a2e;
  }
  #wrapper {
    width: 500px;
    height: 500px;
    position: relative;
    overflow: hidden;
    background-color: #000;
  }
  .meme-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .meme-text {
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    font-family: "Impact", "Anton", sans-serif;
    font-size: <%= fontSize %>px;
    color: <%= textColor %>;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 2px;
    padding: 10px 15px;
    line-height: 1.1;
    word-wrap: break-word;
    text-shadow: 
      -3px -3px 0 <%= strokeColor %>,  
       3px -3px 0 <%= strokeColor %>,
      -3px  3px 0 <%= strokeColor %>,
       3px  3px 0 <%= strokeColor %>,
      -3px  0px 0 <%= strokeColor %>,
       3px  0px 0 <%= strokeColor %>,
       0px -3px 0 <%= strokeColor %>,
       0px  3px 0 <%= strokeColor %>;
  }
  .text-top {
    top: 10px;
  }
  .text-bottom {
    bottom: 10px;
  }
  .text-center {
    top: 50%;
    transform: translateY(-50%);
  }
  
  /* Preview container styling */
  .preview-container {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }
  .preview-label {
    color: white;
    font-family: 'Segoe UI', sans-serif;
    font-size: 14px;
    text-align: center;
    margin-bottom: 15px;
    opacity: 0.9;
    letter-spacing: 1px;
  }
  #wrapper {
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
  }
</style>

<div class="preview-container">
  <p class="preview-label">✨ MEME PREVIEW ✨</p>
  <div id="wrapper">
    <img class="meme-image" src="<%- img %>" alt="meme" crossorigin="anonymous" />
    <% if (textTop) { %>
      <p class="meme-text text-top"><%- textTop %></p>
    <% } %>
    <% if (textBottom) { %>
      <p class="meme-text text-bottom"><%- textBottom %></p>
    <% } %>
    <% if (textCenter) { %>
      <p class="meme-text text-center"><%- textCenter %></p>
    <% } %>
  </div>
</div>

<%- include("./layout/footer-meme") %>

