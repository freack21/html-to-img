<%- include("./layout/header") %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700;900&display=swap');
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    background-color: #1a1a2e;
  }
  #wrapper {
    width: 640px;
    height: 360px;
    position: relative;
    overflow: hidden;
    background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)), url('<%- bgImage %>');
    background-size: cover;
    background-position: center;
    border-radius: 12px;
  }
  .yt-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    background: linear-gradient(transparent, rgba(0,0,0,0.9));
  }
  .yt-emoji {
    font-size: 48px;
    position: absolute;
    top: 20px;
    right: 24px;
    filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.5));
  }
  .yt-text {
    font-family: 'Poppins', sans-serif;
    font-size: 42px;
    font-weight: 900;
    color: white;
    text-transform: uppercase;
    line-height: 1.1;
    text-shadow: 3px 3px 6px rgba(0,0,0,0.8);
    margin-bottom: 8px;
  }
  .yt-subtext {
    font-family: 'Poppins', sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #ffcc00;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
  }
  .yt-channel {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: rgba(0,0,0,0.7);
    padding: 8px 14px;
    border-radius: 20px;
  }
  .yt-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 2px solid #ff0000;
  }
  .yt-channel-name {
    color: white;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    font-weight: 700;
  }
  .yt-play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 68px;
    height: 48px;
    background-color: rgba(255, 0, 0, 0.9);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .yt-play-btn::after {
    content: "";
    border-left: 18px solid white;
    border-top: 11px solid transparent;
    border-bottom: 11px solid transparent;
    margin-left: 4px;
  }
</style>

<div id="wrapper">
  <div class="yt-emoji"><%- emoji %></div>
  <div class="yt-play-btn"></div>
  <div class="yt-content">
    <div class="yt-text"><%- text %></div>
    <div class="yt-subtext"><%- subtext %></div>
  </div>
  <div class="yt-channel">
    <img class="yt-avatar" src="<%- avatar %>" alt="channel" crossorigin="anonymous" />
    <span class="yt-channel-name"><%- channelName %></span>
  </div>
</div>

<%- include("./layout/footer") %>

